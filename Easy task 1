2. styles.css

/* Basic Reset - Nothing Fancy */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Body styling, pretty straightforward */
body {
    background-color: #f3f3f3;
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    padding: 10px; /* Who doesn't like padding? */
}

/* Cards wrapper */
.cards-wrapper {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(270px, 1fr));
    gap: 15px; /* Not exactly even, but it works! */
    width: 100%;
    max-width: 1200px;
    padding: 15px; /* Just felt like it needed some padding */
}

/* Card Item - Every card has its style */
.card-item {
    background: white;
    border-radius: 8px; /* A little less round */
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.15);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    padding: 20px;
    transition: transform 0.3s ease; /* Love these hover effects */
}

/* Image styling */
.card-item img {
    width: 100%;
    border-radius: 8px 8px 0 0;
}

/* Title Styling */
.card-item h3 {
    margin-top: 10px;
    font-size: 1.3rem;
    color: #333;
}

/* Description Styling */
.card-item p {
    margin-top: 5px;
    font-size: 0.95rem;
    line-height: 1.4;
    color: #555; /* Light, but not too light */
}

/* Button Styling */
.card-item button {
    margin-top: auto; /* pushes the button to the bottom naturally */
    background-color: #007bff;
    color: white;
    padding: 8px 16px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.2s ease;
}

.card-item button:hover {
    background-color: #0056b3; /* Darker hover */
}

/* Hover Effect - because why not */
.card-item:hover {
    transform: translateY(-3px); /* just a slight lift */
}

/* Responsive tweaks */
@media (max-width: 768px) {
    /* Shrinking fonts a bit */
    .card-item h3 {
        font-size: 1.1rem;
    }
    
    .card-item p {
        font-size: 0.85rem;
    }
    
    .card-item button {
        padding: 7px 14px;
    }
}







